<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div>
      <div>
        <button
          class="bg-green-500 hover:bg-red-700 text-white font-bold py-2 px-4 border border-green-700 hover:border-red-900 rounded"
        >
          <a href="/create">ADD</a>
        </button>
      </div>
    </div>
    <div class="flex justify-center my-8">
      <table class="table-auto w-full shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-200 text-gray-700">
          <tr>
            <th class="px-4 py-2 text-left">ID</th>
            <th class="px-4 py-2 text-left">Name</th>
            <th class="px-4 py-2 text-left">Price</th>
            <th class="px-4 py-2 text-left">Description</th>
            <th class="px-4 py-2 text-left">Image</th>
            <th class="px-4 py-2 text-left">Action</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% products.forEach((p) => { %>
          <tr class="border-b">
            <td class="px-4 py-2 text-left"><%= p.id %></td>
            <td class="px-4 py-2 text-left"><%= p.name %></td>
            <td class="px-4 py-2 text-left"><%= p.price %></td>
            <td class="px-4 py-2 text-left"><%= p.description %></td>
            <td class="px-4 py-2 text-left">
              <img
                src="/uploads/<%= p.image %>"
                class="h-24 w-24 object-cover"
                alt=""
              />
            </td>
            <td class="px-4 py-2 text-left">
              <a
                href="/edit/<%= p.id %>"
                class="text-blue-500 hover:text-blue-700 mr-2"
                >Edit</a
              >
              <a
                onclick="return confirm('Are you sure?')"
                href="/delete/<%=p.id%>"
                class="text-red-500 hover:text-red-700"
                >Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
